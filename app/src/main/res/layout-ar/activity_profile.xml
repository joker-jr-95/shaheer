<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f6f6f7">
    <include
        layout="@layout/toolbar_normal"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/margin_large"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/margin_normal"
                    app:cardCornerRadius="@dimen/margin_normal"


                    >
                    <ImageView
                        android:id="@+id/iv_add_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_photo_post"
                        android:elevation="9dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        app:tint="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"

                        />





                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginLeft="@dimen/margin_above_large"
                    android:layout_below="@+id/card"
                    android:layout_marginRight="@dimen/margin_above_large"
                    android:elevation="8dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@mipmap/big_image_user"

                        />
                    <ImageButton
                        android:id="@+id/iv_add_photo"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/bg_profile"
                        android:src="@drawable/add_small_ohoto"
                        android:tint="@android:color/white"


                        />
                </RelativeLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/margin_normal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:text="@string/edit_profile"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/textsize"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/editTextInputProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:id="@+id/input_lay_name"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        app:boxStrokeColor="@color/colorAccent"
                        android:layout_marginBottom="@dimen/margin_normal"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_med"
                            android:fontFamily="@font/cairo_regular"
                            
                            android:hint="@string/user_name"
                            android:inputType="textPersonName"
                            android:padding="@dimen/margin_large"
                            android:textSize="@dimen/textsize2"

                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/editTextInputProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:id="@+id/input_lay_mail"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        app:boxStrokeColor="@color/colorAccent"
                        android:layout_marginBottom="@dimen/margin_normal"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_med"
                            android:fontFamily="@font/cairo_regular"
                            
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/margin_large"
                            android:textSize="@dimen/textsize2"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/editTextInputProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:id="@+id/input_lay_phone"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        app:boxStrokeColor="@color/colorAccent"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:visibility="gone"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_med"
                            android:fontFamily="@font/cairo_regular"
                            
                            android:hint="@string/phone"
                            android:inputType="phone"
                            android:padding="@dimen/margin_large"
                            android:textSize="@dimen/textsize2"

                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/editTextInputProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:id="@+id/input_lay"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        app:boxStrokeColor="@color/colorAccent"
                        android:layout_marginBottom="@dimen/margin_normal"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_med"
                            android:fontFamily="@font/cairo_regular"
                            android:gravity="top"
                            android:hint="@string/bio"
                            android:lines="4"
                            android:inputType="textMultiLine"
                            android:padding="@dimen/margin_large"
                            android:textSize="@dimen/textsize2"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/editTextInputProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:id="@+id/etGender_lay"

                            android:layout_marginTop="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:layout_marginBottom="@dimen/margin_normal"
                            app:boxBackgroundColor="@android:color/white"
                            >
                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/etGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_med"
                                android:fontFamily="@font/cairo_regular"
                                
                                android:hint="@string/gender"
                                android:inputType="text"
                                android:cursorVisible="false"
                                android:maxLines="1"
                                android:editable="false"
                                android:textEditSuggestionItemLayout="@null"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:drawableTint="@android:color/darker_gray"
                                android:clickable="true"
                                android:padding="@dimen/margin_large"
                                android:textSize="@dimen/textsize2"
                                android:focusable="false" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/editTextInputProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:id="@+id/etOccupations_lay"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:layout_marginBottom="@dimen/margin_normal"
                            app:boxBackgroundColor="@android:color/white"
                            >
                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/etOccupations"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_med"
                                android:fontFamily="@font/cairo_regular"
                                
                                android:hint="@string/occupations"
                                android:inputType="text"
                                android:cursorVisible="false"
                                android:maxLines="1"
                                android:editable="false"
                                android:textEditSuggestionItemLayout="@null"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:drawableTint="@android:color/darker_gray"
                                android:clickable="true"
                                android:padding="@dimen/margin_large"
                                android:textSize="@dimen/textsize2"
                                android:focusable="false" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_large"
                        android:textColor="@android:color/white"
                        android:text="@string/save_changes"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>