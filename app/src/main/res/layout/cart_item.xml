<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/checkbox_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@null"
        android:background="@drawable/my_check"
        android:checked="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/margin_normal"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:cardCornerRadius="@dimen/margin_normal"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/margin_small"
        >
        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/image_choose_one"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order1"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo_regular"
            android:textSize="@dimen/textsize2"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 sar"
            android:textStyle="bold"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/bg_cart_counter"
        android:padding="@dimen/padding_med"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        >
        <ImageView
            android:id="@+id/iv_min"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/minus"
            android:padding="@dimen/padding_med"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_med"
            android:src="@drawable/plus_order"
            />

    </LinearLayout>
</LinearLayout>

    <include
        layout="@layout/prices_shop_bar"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

<View
    android:id="@+id/view_sep"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@android:color/darker_gray"
    android:layout_margin="@dimen/margin_normal"
    />
</LinearLayout>