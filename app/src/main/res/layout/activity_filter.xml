<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg"
    tools:context=".ui.activity.main.ui.search.FilterActivity">
<include
    layout="@layout/toolbar_filter"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_normal"
        android:layout_margin="@dimen/margin_normal"
        app:cardBackgroundColor="@android:color/white"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_range"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/textsize2"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/margin_small"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                <TextView
                    android:id="@+id/min_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/textsize3"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    />
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/textsize3"
                    android:layout_margin="@dimen/margin_small"
                    />
                    <TextView
                        android:id="@+id/max_price_tv"

                        android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/textsize3"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"

                    />
                </LinearLayout>
            </RelativeLayout>

            <com.github.guilhe.views.SeekBarRangedView
                android:id="@+id/range_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:currentMin="0"
                android:layout_margin="@dimen/margin_normal"
                app:progressColor="@color/colorAccent"
                app:thumbNormalResource="@drawable/normal_thumb"
                app:thumbPressedResource="@drawable/selected_thumb"
                app:rounded="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:textSize="@dimen/textsize2"
            android:visibility="gone"
            />
            <include
                layout="@layout/option_bar"
                android:visibility="gone"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:textSize="@dimen/textsize2"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textSize="@dimen/textsize2"
                    android:layout_margin="@dimen/margin_large"
                    />
                com.whinc.widget.ratingbar.RatingBar
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:rb_max_count="5"
                    android:stepSize="0.5"
                    android:layout_gravity="center_horizontal"
                    app:rb_empty="@drawable/star_gray_non"
                    app:rb_fill="@drawable/star_blue"
                    app:rb_space="10dp"
                    app:rb_click_rating="true"
                    app:rb_touch_rating="true"
                    />
<RatingBar
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:stepSize="0.5"
                    android:layout_gravity="center_horizontal"
    />

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/apply_filter"
                android:textSize="@dimen/textsize3"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>