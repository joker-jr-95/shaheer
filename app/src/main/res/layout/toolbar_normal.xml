<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="@dimen/margin_normal"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"

        android:background="@android:color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/arr_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="visible"
                android:padding="@dimen/padding_med"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/left_arrpw"
                android:tint="@color/colorAccent"
                android:layout_alignParentLeft="true"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
            <ImageView
                android:id="@+id/iv_toolbar_book_mark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/padding_med"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/bookmark_gray"


                />
             <ImageView
                android:id="@+id/iv_toolbar_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/padding_med"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/more"
                 android:visibility="gone"
                android:tint="@color/colorAccent"


                />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize2"
                android:textStyle="bold"
                android:fontFamily="@font/cairo_regular"
                    android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

</LinearLayout>