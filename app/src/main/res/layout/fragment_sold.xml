<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_auto_start="true"


        >
        <include
            layout="@layout/shimmer_layout_service"
            />
    </com.facebook.shimmer.ShimmerFrameLayout>
    <LinearLayout
        android:id="@+id/empty_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="500dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@android:color/white"

        >
        <ImageView
            android:id="@+id/empty_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/empty_box"
            android:gravity="center"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/cairo_regular"
            android:textSize="@dimen/textsize1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_services"
            android:layout_below="@id/empty_iv"
            android:gravity="center"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:id="@+id/requested_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_small"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/requested"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/requested_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:text="1"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@android:color/black"
        />
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requested_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inprogress_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_small"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/cairo_bold"
        android:text="@string/inprogress"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/inprogress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:text="1"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@android:color/black"
        />
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/progress_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/completed_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_small"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/completed"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/completed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:text="1"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@android:color/black"
        />
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/completed_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/canceled_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_small"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/canceled"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/canceled_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:text="1"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@android:color/black"
        />
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/canceled_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>